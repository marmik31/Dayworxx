<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/lyOutCellContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small">

        <TextView
            android:id="@+id/txtViewDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/edittxt_padding"
            android:text="Monday"
            android:textColor="@color/edtTxtContent"
            android:textSize="@dimen/edittxt_hint"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtViewHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/edittxt_padding"
            android:text="Monday"
            android:textColor="@color/edtTxtContent"
            android:textSize="@dimen/edittxt_hint"
            android:typeface="serif" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/edtTxtBorder" />

</LinearLayout>