<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyOutCellContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyOutHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtViewProjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/edittxt_padding"
                android:text="Monday"
                android:textColor="@color/edtTxtContent"
                android:textSize="@dimen/edittxt_hint"
                android:typeface="serif" />


            <TextView
                android:id="@+id/txtViewDraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/edittxt_padding"
                android:text="Draft"
                android:textColor="@color/edtTxtContent"
                android:textSize="@dimen/edittxt_hint"
                android:typeface="serif" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtViewSiteAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/edittxt_padding"
            android:text="Monday"
            android:textColor="@color/edtTxtContent"
            android:textSize="@dimen/edittxt_hint"
            android:typeface="serif" />

        <TextView
            android:id="@+id/txtViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/edittxt_padding"
            android:text="Monday"
            android:textColor="@color/edtTxtContent"
            android:textSize="@dimen/edittxt_hint"
            android:typeface="serif" />


        <TextView
            android:id="@+id/txtViewOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/edittxt_padding"
            android:text="Monday"
            android:textColor="@color/edtTxtContent"
            android:textSize="@dimen/edittxt_hint"
            android:typeface="serif" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtViewReportId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/edittxt_padding"
                android:text="Monday"
                android:textColor="@color/edtTxtContent"
                android:textSize="@dimen/edittxt_hint"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_medium"
                android:src="@drawable/delet" />
        </RelativeLayout>

        <!--<TextView-->
        <!--android:id="@+id/txtViewHours"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:padding="@dimen/edittxt_padding"-->
        <!--android:text="Monday"-->
        <!--android:textColor="@color/edtTxtContent"-->
        <!--android:textSize="@dimen/edittxt_hint"-->
        <!--android:typeface="serif" />-->

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/lyOutHeader"
        android:background="@color/edtTxtBorder" />


</RelativeLayout>