<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edTxtDefault" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:textColor">@color/edtTxtContent</item>
        <item name="android:paddingBottom">@dimen/edittxt_padding</item>
        <item name="android:paddingTop">@dimen/edittxt_padding</item>
        <item name="android:paddingLeft">@dimen/edittxt_padding</item>
        <item name="android:paddingRight">@dimen/edittxt_padding</item>
        <item name="android:textColorHint">@color/edtTxtContent</item>
        <item name="android:textSize">@dimen/edittxt_hint</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edTxtReport" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:textColor">@color/edtTxtContent</item>
        <item name="android:paddingBottom">@dimen/edittxt_padding</item>
        <item name="android:paddingTop">@dimen/edittxt_padding</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">@dimen/edittxt_padding</item>
        <item name="android:textColorHint">@color/edtTxtContent</item>
        <item name="android:textSize">@dimen/edittxt_hint</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
        <!--<item name="android:gravity">center</item>-->
    </style>

    <style name="btnDefault" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/round_corner_button</item>
        <item name="android:paddingBottom">@dimen/button_top_padding</item>
        <item name="android:paddingTop">@dimen/button_top_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/edtTxtContent</item>
    </style>

    <style name="NoTitleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
